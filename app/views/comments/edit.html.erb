<br>
<h1> Please edit your comment: </h1>
<div class="col-md-5 col-xs-12 col-lg-offset-5">
  <br>
<%= form_for @comment do |f| %>
<div class="form-title">
  <h3><%= f.text_field :title, placeholder: :title %> </h3>
</div>
<div class="form-text">
  <h3> <%= f.text_area :text, placeholder: :text%> </h3>
</div>
<%= f.submit "Save Changes", :class => "btn btn-primary" %>
</div>
<% end %>
